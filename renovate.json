{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.pre-commit-config.yaml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s+rev:\\s+v?(?<currentValue>.*?)\\s"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/|\\.)Earthfile$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(\\s+versioning=(?<versioning>.*?))?\\s+ARG\\s+(?:--global\\s+)?.+_VERSION=(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^earthly\\.sh$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "earthly/earthly",
      "matchStrings": [
        "earthly\\/earthly:(?<currentValue>.*?)\\s"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.*\\.yml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s+version:\\s+\"(?<currentValue>.*?)\""
      ]
    }
  ],
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "schedule": [
    "after 16:00 every friday",
    "every weekend"
  ],
  "timezone": "America/Los_Angeles"
}